<Window x:Class="MicControlX.OsdOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:MicControlX"
        xmlns:local="clr-namespace:MicControlX"
        Title="{Binding AppTitle, Source={x:Static local:LocalizationManager.Instance}}" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="Manual">
    
    <Window.Resources>
        <!-- Legion Toolkit Inspired Colors -->
        <SolidColorBrush x:Key="LLTBgBrush" Color="#2F2F2F"/>
        <SolidColorBrush x:Key="LLTBorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="LLTTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#FF2121"/>
        <SolidColorBrush x:Key="UnmutedBrush" Color="#00FF41"/>
        
        <!-- Fade Animation -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="1" To="0" Duration="0:0:0.5"/>
        </Storyboard>
    </Window.Resources>
    
    <Grid Name="MainContainer">
        
        <!-- Default Style - MicControlX standard notification design -->
        <Border Name="DefaultStyleContent" 
                Background="#1E1E1E" 
                BorderBrush="#404040"
                BorderThickness="1"
                CornerRadius="12"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="20,12">
                <Ellipse Name="DefaultStyleIndicator"
                         Width="16"
                         Height="16"
                         Margin="0,0,12,0"
                         VerticalAlignment="Center"/>
                <TextBlock Name="DefaultStyleText"
                           Text="{Binding MicrophoneStatus, Source={x:Static local:LocalizationManager.Instance}}"
                           Foreground="White"
                           FontFamily="Segoe UI"
                           FontSize="16"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Lenovo Vantage Inspired Style -->
        <Border Name="VantageStyleContent"
                Background="Transparent"
                Visibility="Collapsed">
            <Grid Width="128" Height="128">
                <!-- Border/Background Layer -->
                <Image Name="VantageStyleBorder"
                       Width="128"
                       Height="128"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
                <!-- Icon Layer (on top) -->
                <Image Name="VantageStyleIcon"
                       Width="64"
                       Height="64"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Grid>
        </Border>

        <!-- Lenovo Legion Toolkit Inspired Style -->
        <Border Name="LLTStyleContent"
                Background="#212121"
                BorderBrush="#333333"
                BorderThickness="1"
                CornerRadius="8"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="8" Opacity="0.8"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="16,12">
                <!-- LLT-style icon placeholder -->
                <Border Width="24" Height="24" 
                        Background="#2D2D30"
                        CornerRadius="4"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center">
                    <Ellipse Name="LLTStyleIndicator"
                             Width="8"
                             Height="8"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Border>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Microphone, Source={x:Static local:LocalizationManager.Instance}}"
                               Foreground="#CCCCCC"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               FontWeight="Normal"/>
                    <TextBlock Name="LLTStyleText"
                               Text="{Binding Active, Source={x:Static local:LocalizationManager.Instance}}"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
