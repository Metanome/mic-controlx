<ui:FluentWindow x:Class="MicControlX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="MicControlX" 
        Height="600" 
        Width="520"
        MinHeight="600"
        MinWidth="520"
        WindowStartupLocation="CenterScreen"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ShowInTaskbar="False">

    <ui:FluentWindow.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,7" />
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="ui:Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Appearance" Value="Secondary" />
        </Style>

        <!-- Primary Card Style -->
        <Style x:Key="PrimaryCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AccentStrokeColorDefaultBrush}" />
        </Style>

        <!-- Last Card Style (no bottom margin) -->
        <Style x:Key="LastCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Margin" Value="0" />
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="MicControlX" ShowMaximize="False" ShowMinimize="True" />

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="20,10,20,20">
            <StackPanel>
                
                <!-- Header with Settings and Info buttons -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="MicControlX" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                    
                    <ui:Button Grid.Column="1" 
                               Name="SettingsButton"
                               Content="Settings"
                               Icon="{ui:SymbolIcon Settings24}"
                               Margin="0,0,8,0"
                               Click="SettingsButton_Click"
                               ToolTip="Settings"
                               Appearance="Secondary"
                               HorizontalContentAlignment="Center"
                               Padding="12,8"/>
                    
                    <ui:Button Grid.Column="2" 
                               Name="InfoButton"
                               Content="About"
                               Icon="{ui:SymbolIcon Info24}"
                               Click="InfoButton_Click"
                               ToolTip="About"
                               Appearance="Secondary"
                               HorizontalContentAlignment="Center"
                               Padding="12,8"/>
                </Grid>

                <!-- Hotkey Card -->
                <Border Style="{StaticResource PrimaryCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Global Hotkey" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="White"
                                   Margin="0,0,0,8"/>
                        <TextBlock Name="HotkeyLabel" 
                                   Text="Press F11 to toggle, hold to mute/unmute temporarily"
                                   FontSize="12"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Features & Compatibility Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Features &amp; Compatibility" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <Run Text="• Universal Windows microphone control utility"/>
                            <LineBreak/>
                            <Run Text="• Works with any Windows audio device and system settings"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Alternative Controls Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Alternative Controls" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <Run Text="• Single-click system tray icon to toggle"/>
                            <LineBreak/>
                            <Run Text="• Double-click tray icon to open app"/>
                            <LineBreak/>
                            <Run Text="• Right-click tray icon for options"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Microphone Status Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:SymbolIcon Name="StatusIcon" 
                                           Grid.Column="0"
                                           Symbol="Mic24" 
                                           FontSize="24" 
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Microphone Status" 
                                           FontWeight="Bold" 
                                           FontSize="14" 
                                           Margin="0,0,0,4"/>
                                <TextBlock Name="StatusText" 
                                           Text="Active" 
                                           FontSize="12" 
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- System Information Card -->
                <Border Style="{StaticResource LastCardStyle}">
                    <StackPanel>
                        <TextBlock Text="System Information" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Brand: " 
                                       FontSize="12" 
                                       Margin="0,0,8,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Name="BrandLabel"
                                       Text="Unknown System" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,4"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Platform: " 
                                       FontSize="12" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Name="PlatformLabel"
                                       Text="Windows 11 Pro 23H2" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </StackPanel>
    </Grid>

</ui:FluentWindow>
