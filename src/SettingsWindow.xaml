<ui:FluentWindow x:Class="MicControlX.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Settings" 
        Height="580" 
        Width="520"
        MinHeight="580"
        MinWidth="520"
        MaxHeight="650"
        MaxWidth="520"
        WindowStartupLocation="CenterOwner"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip">

    <ui:FluentWindow.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <!-- Last Card Style (no bottom margin) -->
        <Style x:Key="LastCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Margin" Value="0" />
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Settings" ShowMaximize="False" ShowMinimize="False" />

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="20,10,20,10">
            <StackPanel>
                
                <!-- Header -->
                <TextBlock Text="MicControlX Settings" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,16"/>

            <!-- Hotkey Settings Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Hotkey Settings" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Global Hotkey:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0"/>
                        <ComboBox Grid.Column="1" 
                                  Name="HotkeyComboBox"
                                  Width="150"
                                  HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Notification Settings Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Notification Type" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,12"/>
                    
                    <RadioButton Name="OsdNotificationRadio" 
                                 Content="Show OSD overlay" 
                                 GroupName="NotificationType"
                                 IsChecked="True"
                                 Margin="0,0,0,8"/>
                    
                    <RadioButton Name="TrayNotificationRadio" 
                                 Content="Show tray notifications" 
                                 GroupName="NotificationType"
                                 Margin="0,0,0,12"/>
                    
                    <Grid Name="OsdStylePanel">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="OSD Style:" 
                                   VerticalAlignment="Center"
                                   Margin="20,0,16,0"/>
                        <ComboBox Grid.Column="1" 
                                  Name="OsdStyleComboBox"
                                  Width="200"
                                  HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Application Settings Card -->
            <Border Style="{StaticResource LastCardStyle}">
                <StackPanel>
                    <TextBlock Text="Application Settings" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="App Theme:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,8"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  Name="AppThemeComboBox"
                                  Width="150"
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,8"/>
                        
                        <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                  Name="AutoStartCheckBox"
                                  Content="Start with Windows"
                                  Margin="0,0,0,8"/>
                        
                        <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                  Name="SoundFeedbackCheckBox"
                                  Content="Enable sound feedback"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ui:Button Grid.Column="1" 
                       Name="OkButton"
                       Content="OK" 
                       Appearance="Primary"
                       Width="80"
                       Margin="0,0,8,0"
                       Click="OkButton_Click"/>
            
            <ui:Button Grid.Column="2" 
                       Name="CancelButton"
                       Content="Cancel" 
                       Appearance="Secondary"
                       Width="80"
                       Click="CancelButton_Click"/>
        </Grid>

    </Grid>

</ui:FluentWindow>
