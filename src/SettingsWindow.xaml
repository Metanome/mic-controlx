<ui:FluentWindow x:Class="MicControlX.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:res="clr-namespace:MicControlX"
        xmlns:local="clr-namespace:MicControlX"
        Title="{Binding Settings, Source={x:Static local:LocalizationManager.Instance}}" 
        Height="580" 
        Width="520"
        MinHeight="580"
        MinWidth="520"
        MaxHeight="650"
        MaxWidth="520"
        WindowStartupLocation="CenterOwner"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip">

    <ui:FluentWindow.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <!-- Last Card Style (no bottom margin) -->
        <Style x:Key="LastCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Margin" Value="0" />
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="{Binding Settings, Source={x:Static local:LocalizationManager.Instance}}" ShowMaximize="False" ShowMinimize="False" />

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="20,10,20,10">
            <StackPanel>
                
                <!-- Header -->
                <TextBlock Text="{Binding SettingsTitle, Source={x:Static local:LocalizationManager.Instance}}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,16"/>

            <!-- Hotkey Settings Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding HotkeySettings, Source={x:Static local:LocalizationManager.Instance}}" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding GlobalHotkeyLabel, Source={x:Static local:LocalizationManager.Instance}}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0"/>
                        <ComboBox Grid.Column="1" 
                                  Name="HotkeyComboBox"
                                  MinWidth="150"
                                  MaxDropDownHeight="200"
                                  HorizontalAlignment="Left"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Notification Settings Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding NotificationType, Source={x:Static local:LocalizationManager.Instance}}" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,12"/>
                    
                    <RadioButton Name="OsdNotificationRadio" 
                                 Content="{Binding ShowOSDOverlay, Source={x:Static local:LocalizationManager.Instance}}" 
                                 GroupName="NotificationType"
                                 IsChecked="True"
                                 Margin="0,0,0,8"/>
                    
                    <RadioButton Name="TrayNotificationRadio" 
                                 Content="{Binding ShowTrayNotifications, Source={x:Static local:LocalizationManager.Instance}}" 
                                 GroupName="NotificationType"
                                 Margin="0,0,0,12"/>
                    
                    <Grid Name="OsdStylePanel">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding OSDStyleLabel, Source={x:Static local:LocalizationManager.Instance}}" 
                                   VerticalAlignment="Center"
                                   Margin="20,0,16,0"/>
                        <ComboBox Grid.Column="1" 
                                  Name="OsdStyleComboBox"
                                  MinWidth="150"
                                  HorizontalAlignment="Left"/>
                    </Grid>
                    
                    <Grid Name="OsdPositionPanel" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding OSDPositionLabel, Source={x:Static local:LocalizationManager.Instance}}" 
                                   VerticalAlignment="Center"
                                   Margin="20,0,16,0"/>
                        <ComboBox Grid.Column="1" 
                                  Name="OsdPositionComboBox"
                                  MinWidth="150"
                                  HorizontalAlignment="Left"/>
                    </Grid>
                    
                    <Grid Name="OsdDurationPanel" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding OSDDurationLabel, Source={x:Static local:LocalizationManager.Instance}}" 
                                   VerticalAlignment="Center"
                                   Margin="20,0,16,0"/>
                        <Slider Grid.Column="1" 
                                Name="OsdDurationSlider"
                                Minimum="1"
                                Maximum="10"
                                Value="2"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                MinWidth="150"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" 
                                   Name="OsdDurationValueLabel"
                                   Text="2s"
                                   VerticalAlignment="Center"
                                   MinWidth="25"
                                   Margin="8,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Application Settings Card -->
            <Border Style="{StaticResource LastCardStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding ApplicationSettings, Source={x:Static local:LocalizationManager.Instance}}" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="{Binding LanguageLabel, Source={x:Static local:LocalizationManager.Instance}}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,8"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  Name="LanguageComboBox"
                                  MinWidth="180"
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,8"
                                  SelectionChanged="LanguageComboBox_SelectionChanged"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="{Binding ThemeLabel, Source={x:Static local:LocalizationManager.Instance}}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,8"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  Name="ThemeComboBox"
                                  MinWidth="120"
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,8"/>
                        
                        <ui:ToggleSwitch Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                         Name="AutoStartToggleSwitch"
                                         Content="{Binding StartWithWindows, Source={x:Static local:LocalizationManager.Instance}}"
                                         Margin="0,0,0,8"/>
                        
                        <ui:ToggleSwitch Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                         Name="SoundFeedbackToggleSwitch"
                                         Content="{Binding EnableSoundFeedback, Source={x:Static local:LocalizationManager.Instance}}"
                                         Margin="0,0,0,8"/>
                        
                        <ui:ToggleSwitch Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                         Name="FocusAssistToggleSwitch"
                                         Content="{Binding RespectFocusAssist, Source={x:Static local:LocalizationManager.Instance}}"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ui:Button Grid.Column="1" 
                       Name="OkButton"
                       Content="{Binding OK, Source={x:Static local:LocalizationManager.Instance}}" 
                       Appearance="Primary"
                       Width="80"
                       Margin="0,0,8,0"
                       Click="OkButton_Click"/>
            
            <ui:Button Grid.Column="2" 
                       Name="CancelButton"
                       Content="{Binding Cancel, Source={x:Static local:LocalizationManager.Instance}}" 
                       Appearance="Secondary"
                       Width="80"
                       Click="CancelButton_Click"/>
        </Grid>

    </Grid>

</ui:FluentWindow>
