<ui:FluentWindow x:Class="MicControlX.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="About MicControlX"
        Height="485" 
        Width="450"
        MinHeight="485"
        MinWidth="450"
        MaxHeight="485"
        MaxWidth="450"
        WindowStartupLocation="CenterOwner"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ui:TitleBar Grid.Row="0" Title="About MicControlX" ShowMaximize="False" ShowMinimize="False" />
        
        <Grid Grid.Row="1" Margin="20,10,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- App Name -->
        <TextBlock Grid.Row="0"
                   Text="MicControlX"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>
        
        <!-- Version -->
        <TextBlock Grid.Row="1"
                   Name="VersionText"
                   Text="Version 1.0.0"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>
        
        <!-- Description -->
        <TextBlock Grid.Row="2"
                   Text="Global microphone control utility with hotkey support and system tray integration."
                   FontSize="12"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="0,0,0,15"/>
        
        <!-- Features -->
        <TextBlock Grid.Row="3"
                   Text="Features:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,6"/>
        
        <StackPanel Grid.Row="4" Margin="20,0,0,15">
            <TextBlock Text="• Global hotkey support (F1-F24)" FontSize="12" Margin="0,1"/>
            <TextBlock Text="• System tray integration with context menu" FontSize="12" Margin="0,1"/>
            <TextBlock Text="• Multiple OSD notification styles" FontSize="12" Margin="0,1"/>
            <TextBlock Text="• Audio feedback with custom sounds" FontSize="12" Margin="0,1"/>
            <TextBlock Text="• Hold hotkey to temporarily mute/unmute" FontSize="12" Margin="0,1"/>
            <TextBlock Text="• Automatic startup and background operation" FontSize="12" Margin="0,1"/>
        </StackPanel>
        
        <!-- Why needed -->
        <TextBlock Grid.Row="5"
                   Text="This application provides quick and reliable microphone control for users who need instant mute/unmute functionality during calls, streaming, or recording sessions without interrupting their workflow."
                   FontSize="11"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8"/>
        
        <!-- Copyright -->
        <TextBlock Grid.Row="6"
                   Text="© 2025 Dr. Skinner - GNU General Public License v3.0"
                   FontSize="11"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,15"/>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="7" Margin="20,10,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ui:Button Grid.Column="1" 
                       Name="CheckUpdatesButton"
                       Content="Check for Updates" 
                       Appearance="Secondary"
                       Width="Auto"
                       Margin="0,0,8,0"
                       Click="CheckUpdatesButton_Click"/>
            
            <ui:Button Grid.Column="2" 
                       Name="OkButton"
                       Content="OK" 
                       Appearance="Primary"
                       Width="80"
                       Click="OkButton_Click"/>
        </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>
