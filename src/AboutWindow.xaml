<ui:FluentWindow x:Class="MicControlX.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:res="clr-namespace:MicControlX"
        xmlns:local="clr-namespace:MicControlX"
        Title="{Binding AboutTitle, Source={x:Static local:LocalizationManager.Instance}}"
        Height="485" 
        Width="450"
        MinHeight="485"
        MinWidth="450"
        MaxHeight="485"
        MaxWidth="450"
        WindowStartupLocation="CenterOwner"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ui:TitleBar Grid.Row="0" Title="{Binding AboutTitle, Source={x:Static local:LocalizationManager.Instance}}" ShowMaximize="False" ShowMinimize="False" />
        
        <Grid Grid.Row="1" Margin="20,10,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- App Name -->
        <TextBlock Grid.Row="0"
                   Text="{Binding AppTitle, Source={x:Static local:LocalizationManager.Instance}}"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>
        
        <!-- Version -->
        <TextBlock Grid.Row="1"
                   Name="VersionText"
                   Text="{Binding Version, Source={x:Static local:LocalizationManager.Instance}}"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>
        
        <!-- Description -->
        <TextBlock Grid.Row="2"
                   Text="{Binding AppDescription, Source={x:Static local:LocalizationManager.Instance}}"
                   FontSize="12"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="0,0,0,15"/>
        
        <!-- Features -->
        <TextBlock Grid.Row="3"
                   Text="{Binding Features, Source={x:Static local:LocalizationManager.Instance}}"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,6"/>
        
        <StackPanel Grid.Row="4" Margin="20,0,0,15">
            <TextBlock Text="{Binding FeatureGlobalHotkey, Source={x:Static local:LocalizationManager.Instance}}" FontSize="12" Margin="0,1"/>
            <TextBlock Text="{Binding FeatureSystemTray, Source={x:Static local:LocalizationManager.Instance}}" FontSize="12" Margin="0,1"/>
            <TextBlock Text="{Binding FeatureMultipleOSD, Source={x:Static local:LocalizationManager.Instance}}" FontSize="12" Margin="0,1"/>
            <TextBlock Text="{Binding FeatureAudioFeedback, Source={x:Static local:LocalizationManager.Instance}}" FontSize="12" Margin="0,1"/>
            <TextBlock Text="{Binding FeatureHoldHotkey, Source={x:Static local:LocalizationManager.Instance}}" FontSize="12" Margin="0,1"/>
            <TextBlock Text="{Binding FeatureAutoStartup, Source={x:Static local:LocalizationManager.Instance}}" FontSize="12" Margin="0,1"/>
        </StackPanel>
        
        <!-- Why needed -->
        <TextBlock Grid.Row="5"
                   Text="{Binding AboutDescription, Source={x:Static local:LocalizationManager.Instance}}"
                   FontSize="11"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8"/>
        
        <!-- Copyright -->
        <TextBlock Grid.Row="6"
                   Text="{Binding Copyright, Source={x:Static local:LocalizationManager.Instance}}"
                   FontSize="11"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,15"/>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="7" Margin="20,10,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ui:Button Grid.Column="1" 
                       Name="CheckUpdatesButton"
                       Content="{Binding CheckForUpdates, Source={x:Static local:LocalizationManager.Instance}}" 
                       Appearance="Secondary"
                       Width="Auto"
                       Margin="0,0,8,0"
                       Click="CheckUpdatesButton_Click"/>
            
            <ui:Button Grid.Column="2" 
                       Name="OkButton"
                       Content="{Binding OK, Source={x:Static local:LocalizationManager.Instance}}" 
                       Appearance="Primary"
                       Width="80"
                       Click="OkButton_Click"/>
        </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>
